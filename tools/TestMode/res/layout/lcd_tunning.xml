<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray" >
    
	<View 
        android:id="@+id/blank0"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:background="@color/black" />    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/black" >
	    <TextView
	        android:id="@+id/title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/lcd_title"
	        android:textStyle="bold|italic"
	        android:textColor="@color/red"
	        android:textAppearance="?android:attr/textAppearanceLarge" />
	</LinearLayout>
	<View 
        android:id="@+id/blank1"
        android:layout_height="30dp"
        android:layout_width="match_parent"
        android:background="@color/black" />
	
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/black" >
	     <TextView
	        android:id="@+id/textView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/lcd_pre_divider"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:paddingLeft="3dp"
	        android:paddingRight="3dp"
	        android:textStyle="bold|italic" />
	
	    <EditText
	        android:id="@+id/lcd_pre_divider"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:ems="10"
	        android:hint="@string/lcd_hint" >
	        <requestFocus />
    	</EditText>       
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/black" >
	    <TextView
	        android:id="@+id/textView2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/lcd_main_divider"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:paddingLeft="3dp"
	        android:paddingRight="3dp"
	        android:textStyle="bold|italic" />
	
	    <EditText
	        android:id="@+id/lcd_main_divider"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:ems="10"
	        android:hint="@string/lcd_hint" />
    </LinearLayout>
 
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/black" >    
	    <TextView
	        android:id="@+id/textView3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/lcd_scaler"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:paddingLeft="3dp"
	        android:paddingRight="3dp"
	        android:textStyle="bold|italic" />
	
	    <EditText
	        android:id="@+id/lcd_scaler"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:ems="10"
	        android:hint="@string/lcd_hint" />
	</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/black" >     
	    <TextView
	        android:id="@+id/textView4"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/lcd_smies_sae_on"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:paddingLeft="3dp"
	        android:paddingRight="3dp"
	        android:textStyle="bold|italic" />
	
	    <EditText
	        android:id="@+id/lcd_smies_sae_on"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:ems="10"
	        android:hint="@string/lcd_hint" />
	</LinearLayout>


	    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/black" > 	
	    <TextView
	        android:id="@+id/textView5"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/lcd_smies_sae_gain"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:paddingLeft="3dp"
	        android:paddingRight="3dp"
	        android:textStyle="bold|italic" />        
	    <EditText
	        android:id="@+id/lcd_smies_sae_gain"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:ems="10"
	        android:hint="@string/lcd_hint" />
	</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/black" >    
	    <Button
	        android:id="@+id/lcd_set_para"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/lcd_set_para"
	        android:paddingLeft="30dp"
        	android:paddingRight="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
	        android:background="@drawable/button_red_selector" />
	</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center" > 
	    <Button
	        android:id="@+id/lcd_select_txt"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/lcd_select_txt"
        	android:paddingLeft="30dp"
       		android:paddingRight="30dp"       
	        android:background="@drawable/button_blue_selector" />
	</LinearLayout>


</LinearLayout>